          },
          "inputBypass": false,
          "auxiliaryLink": false,
          "comment": ""
        },
        {
          "responseText": "Then let's go ahead and serve it to him.",
          "conditions": null,
          "actions": null,
          "nextNodeIndex": 19,
          "hideIfUnavailable": false,
          "onlyOnce": false,
          "idRef": {
