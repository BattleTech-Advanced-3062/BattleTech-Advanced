      "index": 4,
      "text": "",
      "branches": [
        {
          "responseText": "Are there any <i>real</i> threats down there that we need to worry about?",
          "conditions": null,
          "actions": null,
          "nextNodeIndex": 5,
          "hideIfUnavailable": true,
          "onlyOnce": false,
          "idRef": {
            "id": "9c89bad42554c34f08262f10"
          },
          "inputBypass": false,
          "auxiliaryLink": false,
          "comment": ""
        },
        {
          "responseText": "How likely are we to run into the surface miners you were talking about?",
          "conditions": null,
          "actions": null,
