          },
          "inputBypass": false,
          "auxiliaryLink": false,
          "comment": ""
        },
        {
          "responseText": "It's her call, Lord Madeira. Not yours.",
          "conditions": null,
          "actions": null,
          "nextNodeIndex": 15,
          "hideIfUnavailable": false,
          "onlyOnce": false,
          "idRef": {
