    {
      "idRef": {
        "id": "9cd13cb71041231591a2d8c6"
      },
      "index": 5,
      "text": "",
      "branches": [
        {
          "responseText": "Aren't the Founding Lords and Ladies supposed to be powerless figureheads?",
          "conditions": null,
          "actions": null,
          "nextNodeIndex": 6,
          "hideIfUnavailable": false,
          "onlyOnce": false,
          "idRef": {
            "id": "9c12ce6ca1b8ff7ae5facd56"
          },
          "inputBypass": false,
          "auxiliaryLink": false,
          "comment": ""
        },
        {
          "responseText": "I need to know what I'm about to send my lance into. What makes Weldry so inhospitable?",
          "conditions": null,
          "actions": null,
          "nextNodeIndex": 8,
          "hideIfUnavailable": false,
          "onlyOnce": false,
          "idRef": {
            "id": "9cc5cf1aaa24304f544d5770"
          },
          "inputBypass": false,
          "auxiliaryLink": false,
          "comment": ""
        },
        {
          "responseText": "You've got an army. What do you need us for?",
          "conditions": null,
          "actions": null,
          "nextNodeIndex": 13,
          "hideIfUnavailable": false,
          "onlyOnce": false,
          "idRef": {
            "id": "9ce25dbe834ae32c551335ee"
          },
          "inputBypass": false,
          "auxiliaryLink": false,
          "comment": ""
        }
